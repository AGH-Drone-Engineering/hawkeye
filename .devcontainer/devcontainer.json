{
	"build": {
		"context": "..",
		"dockerfile": "./Dockerfile"
	},
	"workspaceMount": "",
	"workspaceFolder": "/workspace",
	"runArgs": [
		"--volume=${localWorkspaceFolder}:/workspace:Z",
		"--net=ros"
	],
	"forwardPorts": [5900],
	"overrideCommand": false,
	"postCreateCommand": "bash -ic 'cd /workspace/ros2_ws && colcon build --symlink-install'",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode.cpptools",
				"twxs.cmake",
				"ms-vscode.cmake-tools",
				"GitHub.copilot",
				"eamodio.gitlens"
			]
		}
	}
}
