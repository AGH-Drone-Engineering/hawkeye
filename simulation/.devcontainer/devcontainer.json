{
	"build": {
		"context": "..",
		"dockerfile": "./Dockerfile"
	},
	"runArgs": [
		"--net=ros"
	],
	"forwardPorts": [5900],
	"overrideCommand": false,
	"postCreateCommand": "bash -c 'cd /workspaces/${localWorkspaceFolderBasename}/ros2_ws && /ros_entrypoint.sh colcon build --symlink-install'",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode.cpptools",
				"twxs.cmake",
				"ms-vscode.cmake-tools"
			]
		}
	}
}
